{
  "if": {
    "changeDesiredState": {
      "conditions": {
        "all": [
          {
            "fact": "device",
            "path": ".masterDevice",
            "operator": "exists",
            "value": true
          },
          {
            "fact": "device",
            "path": ".deviceTag",
            "operator": "equal",
            "value": "demo:light:v1.0.0"
          }
        ]
      },
      "event": {
        "type": "meshblu",
        "params": {
          "operation": "update",
          "uuid": "{{device.masterDevice.uuid}}",
          "data": {
            "$set": {
              "desiredState": "{{device.desiredState}}"
            }
          }
        }
      }
    }
  }
}
